
@{
    ViewData["Title"] = "菜单详情";
}

@Html.AntiForgeryToken()
<div class="layui-main">
    <input type="hidden" id="id" value="@ViewBag.Id" />
    <span class="layui-breadcrumb">
        <a href="javascript:history.go(-1)">菜单管理</a>
        <a href="javascript:void(0)">菜单信息</a>
    </span>
    <fieldset class="layui-elem-field layui-field-title">
        <legend>菜单信息</legend>
    </fieldset>
    <div class="layui-form layui-form-pane" lay-filter="formData">
        <div class="layui-form-item">
            <label class="layui-form-label">菜单名称</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input" name="Name" autocomplete="off" lay-verify="required" lay-verType="tips" style="width:200px" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">上级菜单</label>
            <div class="layui-input-block" style="width:200px;">
                <select id="ParentId" name="ParentId" lay-verify="required" lay-search="">
                    <option value="">直接选择或搜索选择</option>
                    <option value="0">--无上级菜单--</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">所属模块</label>
            <div class="layui-input-block" style="width:200px;">
                <select id="ModuleId" name="ModuleId" lay-verify="required" lay-search="">
                    <option value="">直接选择或搜索选择</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">菜单地址</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input" name="PageUrl" autocomplete="off" lay-verify="" style="width:200px" placeholder="例: /Home/Index" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">图标</label>
            <div class="layui-input-block">
                <input type="text" class="layui-input" name="Ico" autocomplete="off" lay-verify="" style="width:100px"  />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">排序</label>
            <div class="layui-input-block">
                <input type="number" class="layui-input" style="width:80px;" name="Sort" lay-filter="Sort" lay-verify="" value="0" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-block">
                <input type="checkbox" lay-text="启用|停用" name="Status" title="启用" lay-skin="primary" lay-filter="Status" value="1" checked />
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block layui-btn-container">
                <button class="layui-btn" lay-submit="" lay-filter="save">保存</button>
                <button class="layui-btn layui-btn-danger back" lay-filter="back" onclick="javascript:history.back(-1);">返回</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/layui/layui.js?v=@Html.GetVersion()"></script>
    <script src="~/js/backstage/menu/menuDetails.js?v=@Html.GetVersion()"></script>

}


